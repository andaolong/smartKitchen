<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_light_background"
        tools:context=".SmartActivity">

        <TextView
            android:id="@+id/horizontalLine01"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#898989"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/bt_bmi"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:background="@android:color/transparent"
            android:gravity="bottom"
            android:paddingLeft="35dp"
            android:text="您的BMI："
            android:textColor="@android:color/black"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/horizontalLine01" />

        <TextView
            android:id="@+id/tv_bmi"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:gravity="bottom"
            android:text="20.1"
            android:textSize="18dp"
            app:layout_constraintLeft_toRightOf="@+id/bt_bmi"
            app:layout_constraintStart_toEndOf="@+id/bt_bmi"
            app:layout_constraintTop_toTopOf="@id/horizontalLine01" />

        <TextView
            android:id="@+id/horizontalLine02"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="2dp"
            android:background="#898989"
            app:layout_constraintLeft_toLeftOf="@id/tv_bmi"
            app:layout_constraintRight_toRightOf="@id/tv_bmi"
            app:layout_constraintTop_toBottomOf="@id/tv_bmi" />

        <TextView
            android:id="@+id/bt_food"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:background="@android:color/transparent"
            android:gravity="bottom"
            android:paddingLeft="35dp"
            android:text="现有食材："
            android:textColor="@android:color/black"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/horizontalLine02" />

        <TextView
            android:id="@+id/tv_food"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:gravity="bottom"
            android:text="beef,egg,pork"
            android:textSize="18dp"
            app:layout_constraintLeft_toRightOf="@+id/bt_food"
            app:layout_constraintStart_toEndOf="@+id/bt_food"
            app:layout_constraintTop_toTopOf="@id/horizontalLine02" />

        <TextView
            android:id="@+id/horizontalLine03"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="2dp"
            android:background="#898989"
            app:layout_constraintLeft_toLeftOf="@id/tv_food"
            app:layout_constraintRight_toRightOf="@id/tv_food"
            app:layout_constraintTop_toBottomOf="@id/tv_food" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:background="@android:color/transparent"
            android:gravity="bottom"
            android:paddingLeft="30dp"
            android:text="智能推荐饮食"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/horizontalLine03" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/food1"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv1">

            <com.shehuan.niv.NiceImageView
                android:id="@+id/img1"
                android:layout_width="325dp"
                android:layout_height="180dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/image_food4"
                app:border_color="@color/cardview_dark_background"
                app:border_width="4dp"
                app:is_circle="false"
                app:corner_radius="10dp"
                app:is_cover_src="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tv_food1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                android:background="@drawable/round_corners_white"
                android:text="food1"
                android:textSize="20dp"
                app:layout_constraintLeft_toLeftOf="@id/img1"
                app:layout_constraintTop_toTopOf="@id/img1" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/food2"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/food1">

            <com.shehuan.niv.NiceImageView
                android:id="@+id/img2"
                android:layout_width="325dp"
                android:layout_height="180dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/image_food2"
                app:border_color="@color/cardview_dark_background"
                app:border_width="4dp"
                app:is_circle="false"
                app:corner_radius="10dp"
                app:is_cover_src="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tv_food2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="food2"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:background="@drawable/round_corners_white"
                app:layout_constraintLeft_toLeftOf="@id/img2"
                app:layout_constraintTop_toTopOf="@id/img2" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/food3"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/food2">

            <com.shehuan.niv.NiceImageView
                android:id="@+id/img3"
                android:layout_width="325dp"
                android:layout_height="180dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/image_food3"
                app:border_color="@color/cardview_dark_background"
                app:border_width="4dp"
                app:is_circle="false"
                app:corner_radius="10dp"
                app:is_cover_src="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tv_food3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="food3"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:background="@drawable/round_corners_white"
                app:layout_constraintLeft_toLeftOf="@id/img3"
                app:layout_constraintTop_toTopOf="@id/img3" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
