<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyInfoActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:id="@+id/horizontalLine01"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#898989"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/bt1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:background="@android:color/transparent"
            android:gravity="bottom"
            android:paddingLeft="35dp"
            android:text="您的身高："
            android:textColor="@android:color/black"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/horizontalLine01" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:gravity="bottom"
            android:text="180cm"
            android:textSize="18dp"
            app:layout_constraintLeft_toRightOf="@+id/bt1"
            app:layout_constraintStart_toEndOf="@+id/bt1"
            app:layout_constraintTop_toTopOf="@id/horizontalLine01" />

        <TextView
            android:id="@+id/horizontalLine02"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="2dp"
            android:background="#898989"
            app:layout_constraintLeft_toLeftOf="@id/tv1"
            app:layout_constraintRight_toRightOf="@id/tv1"
            app:layout_constraintTop_toBottomOf="@id/tv1" />

        <TextView
            android:id="@+id/bt2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:background="@android:color/transparent"
            android:gravity="bottom"
            android:paddingLeft="35dp"
            android:text="您的体重："
            android:textColor="@android:color/black"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/horizontalLine02" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:gravity="bottom"
            android:text="68kg"
            android:textSize="18dp"
            app:layout_constraintLeft_toRightOf="@+id/bt2"
            app:layout_constraintStart_toEndOf="@+id/bt2"
            app:layout_constraintTop_toTopOf="@id/horizontalLine02" />

        <TextView
            android:id="@+id/horizontalLine03"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="2dp"
            android:background="#898989"
            app:layout_constraintLeft_toLeftOf="@id/tv2"
            app:layout_constraintRight_toRightOf="@id/tv2"
            app:layout_constraintTop_toBottomOf="@id/tv2" />

        <TextView
            android:id="@+id/bt3"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:background="@android:color/transparent"
            android:gravity="bottom"
            android:paddingLeft="35dp"
            android:text="您的BMI指数："
            android:textColor="@android:color/black"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/horizontalLine03" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:gravity="bottom"
            android:text="20.1"
            android:textSize="18dp"
            app:layout_constraintLeft_toRightOf="@+id/bt3"
            app:layout_constraintStart_toEndOf="@+id/bt3"
            app:layout_constraintTop_toTopOf="@id/horizontalLine03" />

        <TextView
            android:id="@+id/horizontalLine04"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="2dp"
            android:background="#898989"
            app:layout_constraintLeft_toLeftOf="@id/tv3"
            app:layout_constraintRight_toRightOf="@id/tv3"
            app:layout_constraintTop_toBottomOf="@id/tv3" />

        <TextView
            android:id="@+id/bt4"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:background="@android:color/transparent"
            android:gravity="bottom"
            android:paddingLeft="35dp"
            android:text="您的体脂率："
            android:textColor="@android:color/black"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/horizontalLine04" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:gravity="bottom"
            android:text="19"
            android:textSize="18dp"
            app:layout_constraintLeft_toRightOf="@+id/bt4"
            app:layout_constraintStart_toEndOf="@+id/bt4"
            app:layout_constraintTop_toTopOf="@id/horizontalLine04" />

        <TextView
            android:id="@+id/horizontalLine05"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="2dp"
            android:background="#898989"
            app:layout_constraintLeft_toLeftOf="@id/tv4"
            app:layout_constraintRight_toRightOf="@id/tv4"
            app:layout_constraintTop_toBottomOf="@id/tv4" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <Button
        android:id="@+id/bt_change"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corners"
        android:text="修改"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/layout1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="140dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>